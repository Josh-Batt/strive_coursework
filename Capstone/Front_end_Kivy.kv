<FindingWindow>:
    name: 'finding'

    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 3
            cols: 2

            Button:
                text: 'Go Back'
                background_color: 0, 0, 0, 1
                on_release: 
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
            Label:
                text: 'Matching'
                color: 'black'
            Button:
                text: 'Press to start'
                background_color: 0, 0, 0, 1
                on_release: 
                    app.load_face2face()
                    
            Label:

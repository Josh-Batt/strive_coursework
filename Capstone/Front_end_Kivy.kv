WindowManager:
    MainWindow:
    ProfileWindow:
    RequestWindow:
    FindingWindow:

<MainWindow>:
    name: 'main'

    BoxLayout:
        orientation: 'vertical'
        # Label:
        #     text: 'Face2Face'
        #     color: 'black'
        #     background_color: 1, 1, 1, 1

        Image:
            source: 'D:\My_Docs\Local_Folders\Capstone\Logos_Graphics/Logo2.png'
            allow_stretch: True
        Button:
            text: 'My Profile'
            background_color: 0, 0, 0, 1
            size_hint: 1, .5
            #pos_hint: {'center_x': .5}
            
            on_release: 
                app.root.current = 'profile'
                root.manager.transition.direction = 'left'
        Button:
            text: 'My Requests'
            background_color: 0, 0, 0, 1
            size_hint: 1, .5
            #pos_hint: {'center_x': .5}
            on_release: 
                app.root.current = 'request'
                root.manager.transition.direction = 'left'
        Button:
            text: 'Matching'
            background_color: 0, 0, 0, 1
            size_hint: 1, .5
            #pos_hint: {'center_x': .5}
            on_release: 
                app.root.current = 'finding'
                root.manager.transition.direction = 'left'
                #app.load_face2face()

